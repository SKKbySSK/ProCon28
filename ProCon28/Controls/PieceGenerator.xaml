<UserControl x:Class="ProCon28.Controls.PieceGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProCon28.Controls"
             mc:Ignorable="d" d:DesignHeight="384.298" d:DesignWidth="380.165" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <local:PointsNet x:Name="Net" HorizontalPoints="{Binding ElementName=SliderH, Path=Value, Mode=OneWay}" VerticalPoints="{Binding ElementName=SliderV, Path=Value, Mode=OneWay}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="横"/>
            <Slider x:Name="SliderH" Width="150" Value="10" Maximum="100" SmallChange="1" Minimum="1" IsSnapToTickEnabled="True"/>
            <Label Content="縦"/>
            <Slider x:Name="SliderV" Width="150" Value="10" Maximum="100" SmallChange="1" Minimum="1" IsSnapToTickEnabled="True"/>
        </StackPanel>
    </Grid>
</UserControl>
